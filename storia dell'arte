                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
                            </svg>
                        </button>
                        <span id="currentMonthYear">Luglio 2025</span>
                        <button id="nextMonth" class="text-gray-500 hover:text-gray-700">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
                            </svg>
                        </button>
                    </div>
                    <div class="calendar-grid" id="calendarGrid">
                        <!-- Day names -->
                        <div class="calendar-day-name">Lun</div>
                        <div class="calendar-day-name">Mar</div>
                        <div class="calendar-day-name">Mer</div>
                        <div class="calendar-day-name">Gio</div>
                        <div class="calendar-day-name">Ven</div>
                        <div class="calendar-day-name">Sab</div>
                        <div class="calendar-day-name">Dom</div>
                        <!-- Days will be generated by JavaScript -->
                    </div>
                    <div class="flex justify-center mt-4">
                        <button id="closeCalendar" class="px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300 transition-colors">Torna Indietro</button>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Fixed Bottom Menu -->
    <footer class="fixed bottom-0 left-0 right-0 w-full p-4 flex justify-around items-center text-sm footer-menu shadow-lg">
        <button id="calendarButton" class="footer-link flex flex-col items-center px-2 py-1 rounded">
            <!-- Icona Calendario con orologio spostato in basso -->
            <svg width="36" height="36" viewBox="0 0 30 30" fill="none" xmlns="http://www.w3.org/2000/svg">
                <!-- Calendar base -->
                <path d="M24.75 6H5.25C4.00736 6 3 7.00736 3 8.25V24.75C3 25.9926 4.00736 27 5.25 27H24.75C25.9926 27 27 25.9926 27 24.75V8.25C27 7.00736 25.9926 6 24.75 6Z" stroke="#070707" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M21 3V9" stroke="#070707" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M9 3V9" stroke="#070707" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M3 15H27" stroke="#070707" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <!-- Small clock overlay - moved to bottom right -->
                <circle cx="20" cy="20" r="5" fill="white" stroke="#070707" stroke-width="1.5"/>
                <path d="M20 18V20.5H22" stroke="#070707" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        </button>
        <button id="profileFooterButton" class="footer-link flex flex-col items-center px-2 py-1 rounded">
            <svg width="67.2" height="67.2" viewBox="0 0 30 30" fill="none" xmlns="http://www.w3.org/2000/svg">
                <defs>
                    <filter id="shadowFilter">
                        <feDropShadow dx="0.5" dy="0.5" stdDeviation="0.5" flood-color="#000000" flood-opacity="0.3"/>
                    </filter>
                    <linearGradient id="gradientBorder" x1="0%" y1="0%" x2="100%" y2="100%">
                        <!-- Using Sapienza red and a lighter shade for the gradient -->
                        <stop offset="0%" style="stop-color:#822434;stop-opacity:1" />
                        <stop offset="100%" style="stop-color:#a04050;stop-opacity:1" />
                    </linearGradient>
                    <clipPath id="circleClip">
                        <!-- Clip path slightly smaller than the outer circle to leave space for the border -->
                        <circle cx="15" cy="15" r="12.5"/>
                    </clipPath>
                </defs>

                <!-- Main background circle (solid red, with shadow) -->
                <circle cx="15" cy="15" r="14" fill="#822434" filter="url(#shadowFilter)"/>

                <!-- Image inside the circle, clipped to be circular -->
                <!-- x and y are (center - radius_for_clip_path) -->
                <image href="https://i.ibb.co/BVjctdjZ/6041943612016675204-photoaidcom-cropped-1.png"
                       x="2.5" y="2.5" width="25" height="25" clip-path="url(#circleClip)"/>

                <!-- Gradient border circle (on top, with no fill) -->
                <!-- Radius should be slightly less than the main circle's radius to appear as an inner border -->
                <!-- Stroke width of 1px is applied to a circle with radius 13.5, making it appear within the r=14 circle -->
                <circle cx="15" cy="15" r="13.5" fill="none" stroke="url(#gradientBorder)" stroke-width="1"/>
            </svg>
        </button>
        <button id="menuFooterButton" class="footer-link flex flex-col items-center px-2 py-1 rounded">
            <!-- Icona Menu (griglia 3x3 di quadratini rossi con vuoto all'interno) -->
            <svg width="45" height="45" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <rect x="0" y="2" width="4" height="4" rx="1" stroke="#822434" stroke-width="1.75"/>
                <rect x="7" y="2" width="4" height="4" rx="1" stroke="#822434" stroke-width="1.75"/>
                <rect x="14" y="2" width="4" height="4" rx="1" stroke="#822434" stroke-width="1.75"/>
                <rect x="0" y="9" width="4" height="4" rx="1" stroke="#822434" stroke-width="1.75"/>
                <rect x="7" y="9" width="4" height="4" rx="1" stroke="#822434" stroke-width="1.75"/>
                <rect x="14" y="9" width="4" height="4" rx="1" stroke="#822434" stroke-width="1.75"/>
                <rect x="0" y="16" width="4" height="4" rx="1" stroke="#822434" stroke-width="1.75"/>
                <rect x="7" y="16" width="4" height="4" rx="1" stroke="#822434" stroke-width="1.75"/>
                <rect x="14" y="16" width="4" height="4" rx="1" stroke="#822434" stroke-width="1.75"/>
            </svg>
        </button>
    </footer>

    <!-- Sidebar Menu (now a full page content) -->
    <!-- This div is no longer a sidebar, but a content section activated by the footer menu button -->
    <div id="sidebarMenu" class="content-section hidden">
        <!-- The content of this section is now handled by the menuPageSection -->
    </div>
    <div id="sidebarOverlay" class="sidebar-overlay"></div>

    <!-- Payment Modal -->
    <div id="paymentModal" class="modal-overlay">
        <div class="modal-content">
            <button class="modal-close-button" id="closePaymentModal">&times;</button>
            <h3 class="text-2xl font-bold text-gray-800 mb-4">Attenzione!</h3>
            <p class="text-lg text-gray-700">e cu quali soddi mbare</p>
            <p class="text-sm text-gray-500 mt-4"> (Con quali soldi, amico?)</p>
        </div>
    </div>

    <!-- Cancellation Confirmation Modal -->
    <div id="cancelEnrollmentModal" class="modal-overlay">
        <div class="modal-content">
            <button class="modal-close-button" id="closeCancelEnrollmentModal">&times;</button>
            <h3 class="text-2xl font-bold text-gray-800 mb-4">Ne sei sicuro?</h3>
            <p class="text-lg text-gray-700 mb-4">Io ci ripenserei...</p>
            <!-- A generic warning icon or a silhouetted figure instead of a specific "man with a gun" -->
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-16 h-16 mx-auto text-[#822434] mb-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.38 3.375 2.07 3.375h14.006c1.69 0 2.936-1.875 2.069-3.376L12.707 5.624a1.125 1.125 0 00-1.994 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
            </svg>
            <button class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded-md transition-colors" id="confirmCancelEnrollment">Conferma Annullamento</button>
        </div>
    </div>

    <!-- Micro Banner for "E invece no" -->
    <div id="noCancellationModal" class="micro-banner-modal">
        <p class="text-lg text-gray-800">E invece no, con una linguaccia! &#128540;</p>
    </div>

    <!-- Comment Modal -->
    <div id="commentModal" class="modal-overlay">
        <div class="modal-content">
            <button class="modal-close-button" id="closeCommentModal">&times;</button>
            <h3 class="text-2xl font-bold text-gray-800 mb-4">Lascia un commento!</h3>
            <textarea id="commentInput" class="w-full p-3 border border-gray-300 rounded-md mb-4 focus:outline-none focus:ring-2 focus:ring-[#822434]" rows="4" placeholder="Scrivi qui il tuo commento..."></textarea>
            <button id="submitCommentButton" class="bg-[#822434] hover:bg-[#6a1d2b] text-white font-bold py-2 px-4 rounded-md transition-colors shadow-md">
                Invia Commento
            </button>
        </div>
    </div>

    <!-- Search Results Modal -->
    <div id="searchModal" class="modal-overlay">
        <div class="modal-content">
            <button class="modal-close-button" id="closeSearchModal">&times;</button>
            <h3 class="text-2xl font-bold text-gray-800 mb-4">Risultati di ricerca</h3>
            <p id="searchQueryDisplay" class="text-lg text-gray-700 mb-4"></p>
            <p class="text-md text-gray-600">Funzionalità di ricerca in fase di sviluppo. Nessuno risultato trovato per la tua ricerca.</p>
        </div>
    </div>

    <script>
        // Define exam dates for highlighting in the calendar
        const examDates = [
            "2025-07-15", // Storia delle Caccole Medievali
            "2025-07-22", // Teoria del Rutto Libero
            "2025-08-05", // Filosofia del Sonno Profondo
            "2025-09-12", // Archeologia dei Calzini Spaiati
            "2025-09-20"  // Metodologie della Siesta Perfetta
        ];

        // Calendar functionality
        const calendarButton = document.getElementById('calendarButton');
        // calendarModal is now fullPageCalendarSection
        const fullPageCalendarSection = document.getElementById('fullPageCalendarSection');
        const closeCalendar = document.getElementById('closeCalendar');
        // calendarOverlay is no longer needed
        const currentMonthYear = document.getElementById('currentMonthYear');
        const prevMonthButton = document.getElementById('prevMonth');
        const nextMonthButton = document.getElementById('nextMonth');
        const calendarGrid = document.getElementById('calendarGrid');

        let currentDate = new Date(); // Start with current date

        function renderCalendar(date) {
            calendarGrid.innerHTML = `
                <div class="calendar-day-name">Lun</div>
                <div class="calendar-day-name">Mar</div>
                <div class="calendar-day-name">Mer</div>
                <div class="calendar-day-name">Gio</div>
                <div class="calendar-day-name">Ven</div>
                <div class="calendar-day-name">Sab</div>
                <div class="calendar-day-name">Dom</div>
            `; // Reset grid and add day names

            const year = date.getFullYear();
            const month = date.getMonth(); // 0-indexed

            // Set month and year in header
            const monthNames = ["Gennaio", "Febbraio", "Marzo", "Aprile", "Maggio", "Giugno",
                                "Luglio", "Agosto", "Settembre", "Ottobre", "Novembre", "Dicembre"];
            currentMonthYear.textContent = `${monthNames[month]} ${year}`;

            // Get first day of the month (0=Sunday, 1=Monday, etc.)
            const firstDayOfMonth = new Date(year, month, 1).getDay();
            // Adjust to make Monday (1) the start of the week (0-indexed for array, so Monday is 0, Sunday is 6)
            const startDayIndex = (firstDayOfMonth === 0) ? 6 : firstDayOfMonth - 1;

            // Get number of days in current month
            const daysInMonth = new Date(year, month + 1, 0).getDate();

            // Add empty days for the start of the month
            for (let i = 0; i < startDayIndex; i++) {
                const emptyDiv = document.createElement('div');
                emptyDiv.classList.add('calendar-day', 'empty');
                calendarGrid.appendChild(emptyDiv);
            }

            // Add days of the month
            for (let i = 1; i <= daysInMonth; i++) {
                const dayDiv = document.createElement('div');
                dayDiv.classList.add('calendar-day');
                dayDiv.textContent = i;

                // Format the date for comparison with examDates array
                const dayString = i.toString().padStart(2, '0');
                const monthString = (month + 1).toString().padStart(2, '0');
                const formattedDate = `${year}-${monthString}-${dayString}`;

                if (examDates.includes(formattedDate)) {
                    dayDiv.classList.add('exam-day'); // Highlight exam days
                    dayDiv.addEventListener('click', () => {
                        showMainContentSection('examRegistrationSection'); // Go to exam registration
                        // No need to close calendar modal as it's a full page
                    });
                } else if (i === new Date().getDate() && month === new Date().getMonth() && year === new Date().getFullYear()) {
                    dayDiv.classList.add('current-day'); // Highlight current day if not an exam day
                }
                calendarGrid.appendChild(dayDiv);
            }
        }

        // Section visibility logic for main content area
        const contentSections = document.querySelectorAll('.content-section');
        const currentHeaderTitle = document.getElementById('currentHeaderTitle');
        const leftProfileColumn = document.getElementById('leftProfileColumn');
        const mainContentArea = document.getElementById('mainContentArea');

        /**
         * Shows a specific content section and updates browser history.
         * @param {string} sectionId - The ID of the section to show.
         * @param {boolean} pushState - Whether to push a new state to browser history. Default is true.
         */
        function showMainContentSection(sectionId, pushState = true) {
            // Hide all content sections
            contentSections.forEach(section => {
                section.classList.add('hidden');
            });
            // Show the requested section
            document.getElementById(sectionId).classList.remove('hidden');

            // Scroll to the top of the main content area
            mainContentArea.scrollTop = 0;
            window.scrollTo(0, 0); // Also scroll the window to top in case of body scrolling

            // Update browser history if pushState is true
            if (pushState) {
                // Push the current state to history. The URL hash will reflect the section ID.
                history.pushState({ sectionId: sectionId }, '', `#${sectionId}`);
            }

            // Toggle visibility of the left profile column based on sectionId
            if (sectionId === 'profileSection') {
                leftProfileColumn.classList.remove('hidden');
                mainContentArea.classList.remove('md:w-full');
                mainContentArea.classList.add('flex-1');
            } else {
                leftProfileColumn.classList.add('hidden');
                mainContentArea.classList.add('md:w-full');
                mainContentArea.classList.remove('flex-1');
            }

            // Update header title based on active section
            const sectionTitles = {
                'profileSection': 'Dati personali',
                'careerSection': 'Carriera',
                'homeSection': 'Home',
                'examsSection': 'Esami', // Updated title
                'feesSection': 'Tasse',
                'secretariatSection': 'Segreteria',
                'contactsSection': 'Contatti',
                'menuPageSection': 'Menu',
                'examCalendarSection': 'Calendario Appelli',
                'examRegistrationSection': 'Iscrizione Esami',
                'resultsBoardSection': 'Bacheca Risultati',
                'emailSection': 'Email',
                'graduationSection': 'Laurearsi',
                'abroadSection': 'Estero',
                'dsaSection': 'Disabilità e DSA',
                'azetaSection': 'AZETA Studenti',
                'fullPageCalendarSection': 'Calendario Accademico', // New title for the full page calendar
                'studentsPage': 'Studenti',
                'graduatesPage': 'Laureati',
                'teachersPage': 'Docenti',
                'staffPage': 'Personale',
                'contactsPage': 'Contatti Ateneo',
                'newsArticle1': 'Borse di Studio',
                'newsArticle2': 'Catalogo Competenze'
            };
            currentHeaderTitle.textContent = sectionTitles[sectionId] || 'Home';

            // If the calendar section is opened, render it
            if (sectionId === 'fullPageCalendarSection') {
                renderCalendar(currentDate);
            }
        }

        /**
         * Navigates back in the browser's history.
         * This function is triggered by the custom back arrow button.
         */
        function goBack() {
            history.back();
        }

        // Payment Modal functionality
        const payNowButton = document.getElementById('payNowButton');
        const paymentModal = document.getElementById('paymentModal');
        const closePaymentModal = document.getElementById('closePaymentModal');

        function togglePaymentModal() {
            paymentModal.classList.toggle('open');
        }

        // Cancellation Confirmation Modal functionality
        const cancelEnrollmentButtons = document.querySelectorAll('.cancel-enrollment-button');
        const cancelEnrollmentModal = document.getElementById('cancelEnrollmentModal');
        const closeCancelEnrollmentModal = document.getElementById('closeCancelEnrollmentModal');
        const confirmCancelEnrollmentButton = document.getElementById('confirmCancelEnrollment');
        const noCancellationModal = document.getElementById('noCancellationModal'); // New micro banner

        function toggleCancelEnrollmentModal() {
            cancelEnrollmentModal.classList.toggle('open');
        }

        function showNoCancellationModal() {
            noCancellationModal.classList.add('open');
            setTimeout(() => {
                noCancellationModal.classList.remove('open');
            }, 2000); // Hide after 2 seconds
        }

        // Comment Modal functionality
        const commentModal = document.getElementById('commentModal');
        const closeCommentModal = document.getElementById('closeCommentModal');
        const submitCommentButton = document.getElementById('submitCommentButton');
        const commentInput = document.getElementById('commentInput');

        function toggleCommentModal() {
            commentModal.classList.toggle('open');
            if (!commentModal.classList.contains('open')) {
                commentInput.value = ''; // Clear input when closing
            }
        }

        // Search Modal functionality
        const siteSearchInput = document.getElementById('siteSearchInput');
        const searchModal = document.getElementById('searchModal');
        const closeSearchModal = document.getElementById('closeSearchModal');
        const searchQueryDisplay = document.getElementById('searchQueryDisplay');

        function toggleSearchModal(query = '') {
            searchQueryDisplay.textContent = `Hai cercato: "${query}"`;
            searchModal.classList.toggle('open');
        }


        // Ensure DOM is fully loaded before attaching event listeners
        document.addEventListener('DOMContentLoaded', () => {
            // Event listeners for footer buttons
            // Calendar button now opens fullPageCalendarSection
            calendarButton.addEventListener('click', () => showMainContentSection('fullPageCalendarSection'));
            // Profile footer button now opens comment modal
            document.getElementById('profileFooterButton').addEventListener('click', toggleCommentModal);
            document.getElementById('menuFooterButton').addEventListener('click', () => showMainContentSection('menuPageSection'));

            // Event listeners for menu page cards (main menu)
            document.querySelectorAll('.menu-card').forEach(card => {
                card.addEventListener('click', (event) => {
                    const sectionId = event.currentTarget.dataset.section;
                    showMainContentSection(sectionId);
                });
            });

            // Event listeners for home icon cards (main home page)
            document.querySelectorAll('.home-icon-card').forEach(card => {
                card.addEventListener('click', (event) => {
                    event.preventDefault(); // Prevent default link behavior
                    const sectionId = event.currentTarget.dataset.section;
                    showMainContentSection(sectionId);
                });
            });

            // Event listeners for home navigation links (STUDENTI, LAUREATI, etc.)
            document.querySelectorAll('.home-nav-link').forEach(link => {
                link.addEventListener('click', (event) => {
                    const sectionId = event.currentTarget.dataset.section;
                    if (sectionId) { // Only navigate if data-section is defined
                        event.preventDefault();
                        showMainContentSection(sectionId);
                    }
                });
            });

            // Event listeners for news article links
            document.querySelectorAll('.info-card a[data-section]').forEach(link => {
                link.addEventListener('click', (event) => {
                    event.preventDefault();
                    const sectionId = event.currentTarget.dataset.section;
                    showMainContentSection(sectionId);
                });
            });


            // Event listener for the back arrow button in the header
            document.getElementById('backArrowButton').addEventListener('click', goBack);

            // Event listener for the home icon in the header (now leads to Home Sapienza)
            document.getElementById('homeHeaderButton').addEventListener('click', () => {
                // To go to home, we can simply replace the current history state with home,
                // or if we want a clean slate, clear history and push home.
                // For simplicity, let's just show home and replace the state.
                history.replaceState({ sectionId: 'homeSection' }, '', '#homeSection');
                showMainContentSection('homeSection', false); // Don't push state again
            });

            // New event listener for the exams header button
            document.getElementById('examsHeaderButton').addEventListener('click', () => {
                showMainContentSection('examsSection');
            });

            // Calendar specific listeners
            // closeCalendar now navigates back
            closeCalendar.addEventListener('click', goBack);
            // calendarOverlay is removed, so no listener needed
            prevMonthButton.addEventListener('click', () => {
                currentDate.setMonth(currentDate.getMonth() - 1);
                renderCalendar(currentDate);
            });
            nextMonthButton.addEventListener('click', () => {
                currentDate.setMonth(currentDate.getMonth() + 1);
                renderCalendar(currentDate);
            });
            // Initial render for the calendar is now done when the section is opened

            // New event listeners for Exam section links
            document.getElementById('examCalendarLink').addEventListener('click', (event) => {
                event.preventDefault(); // Prevent default link behavior
                showMainContentSection('examCalendarSection');
            });

            document.getElementById('examRegistrationLink').addEventListener('click', (event) => {
                event.preventDefault();
                showMainContentSection('examRegistrationSection');
            });

            document.getElementById('resultsBoardLink').addEventListener('click', (event) => {
                event.preventDefault();
                showMainContentSection('resultsBoardSection');
            });

            // Payment modal listeners
            payNowButton.addEventListener('click', togglePaymentModal);
            closePaymentModal.addEventListener('click', togglePaymentModal);
            paymentModal.addEventListener('click', (event) => {
                if (event.target === paymentModal) { // Close if clicked on overlay
                    togglePaymentModal();
                }
            });

            // Cancellation modal listeners
            cancelEnrollmentButtons.forEach(button => {
                button.addEventListener('click', toggleCancelEnrollmentModal);
            });
            closeCancelEnrollmentModal.addEventListener('click', toggleCancelEnrollmentModal);
            cancelEnrollmentModal.addEventListener('click', (event) => {
                if (event.target === cancelEnrollmentModal) {
                    toggleCancelEnrollmentModal();
                }
            });
            confirmCancelEnrollmentButton.addEventListener('click', () => {
                // Close the "Are you sure?" modal
                toggleCancelEnrollmentModal();
                // Show the "E invece no" micro banner
                showNoCancellationModal();
                console.log("Annullamento iscrizione tentato, ma... no!");
            });


            // Comment modal listeners
            closeCommentModal.addEventListener('click', toggleCommentModal);
            submitCommentButton.addEventListener('click', () => {
                console.log("Commento inviato:", commentInput.value);
                toggleCommentModal(); // Close modal after submitting
            });
            commentModal.addEventListener('click', (event) => {
                if (event.target === commentModal) { // Close if clicked on overlay
                    toggleCommentModal();
                }
            });

            // Site search input listener
            siteSearchInput.addEventListener('keyup', (event) => {
                if (event.key === 'Enter') {
                    toggleSearchModal(siteSearchInput.value);
                }
            });
            closeSearchModal.addEventListener('click', () => toggleSearchModal());
            searchModal.addEventListener('click', (event) => {
                if (event.target === searchModal) {
                    toggleSearchModal();
                }
            });

            // Handle browser popstate event (back/forward buttons)
            window.addEventListener('popstate', (event) => {
                if (event.state && event.state.sectionId) {
                    showMainContentSection(event.state.sectionId, false); // Don't push state again
                } else {
                    // If no state is found (e.g., initial page load or going back past the first pushed state)
                    showMainContentSection('homeSection', false);
                }
            });

            // Initial load: check for hash in URL or default to home
            const initialSection = window.location.hash ? window.location.hash.substring(1) : 'homeSection';
            showMainContentSection(initialSection, true); // Push initial state
        });
    </script>
</body>
</html>
